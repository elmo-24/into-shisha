<%# 商品の概要 %>
<div class="review-show">
  <div class="review-box">
    
    <div class="review-price-box">
      <%# <span class="item-price">
       <%= @ %>
      <%#</span> %>
      <span class="review-postage">
        <%= @review.visit_date %>
      </span>
    </div>
    

    <div class="review-explain-box">
      <span><%= @review.message %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-review">レビュー者</th>
          <td class="detail-value"><%= link_to @review.user.nickname, root_path %></td>
        </tr>
        <tr>
          <th class="detail-review">利用料金</th>
          <td class="detail-value"><%= "¥#{@review.price}" %></td>
        </tr>
        <tr>
          <th class="detail-review">フレーバー</th>
          <td class="detail-value"><%= @review.flavor %></td>
        </tr>
        <tr>
          <th class="detail-review">同行者</th>
          <td class="detail-value"><%= @review.companion.name %></td>
        </tr>
      </tbody>
    </table>
    <div class="comment-content">
        <div class="review-img-content">
          <%= image_tag @review.image ,class:"review-box-img" %>
          <% if user_signed_in? %>
            <% if current_user.id == @review.user_id %>
            <ul class="more-list">
            <li>
              <%= link_to '編集', edit_review_path(@review.id), method: :get, class: "item-red-btn" %>
            </li>
            /
            <li>
              <%= link_to '削除', review_path(@review.id), method: :delete, class:"item-destroy" %>
            </li>
            </ul>
            <% end %>
        <% end %>
        </div>
      
        <div class="coment-form">
            <% if user_signed_in? %>
              <%= form_with(model: [@review, @comment], local: true) do |form| %>
                <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
                <%= form.submit "SEND" %>
              <% end %>
            <% else %>
              <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
            <% end %>
            <div class="comments">
              <h4>＜コメント一覧＞</h4>
              <% @comments.each do |comment| %>
              <p>
              <strong><%= link_to "@#{comment.user.nickname}", "/users/#{comment.user_id}" %>：</strong>
              <%= comment.text %>
              </p>
              <% end %>
            </div>
        </div>
  </div>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "heart.png" ,class:"favorite-icon" ,width:"20",height:"20"%>
        <span> 0</span>
      </div>
      
    </div>
  </div>
  <%# /商品の概要 %>

  

  
</div>

